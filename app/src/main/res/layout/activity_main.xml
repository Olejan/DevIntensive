<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.MainActivity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="horizontal"
            android:background="@color/grey">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    style="@style/text_view"
                    android:id="@+id/rating_tv"
                    android:textSize="@dimen/text_size_24"
                    android:text="5"/>
                <TextView
                    style="@style/text_view"
                    android:text="Рейтинг"/>
            </LinearLayout>

            <View style="@style/vertical_line"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    style="@style/text_view"
                    android:id="@+id/strings_tv"
                    android:textSize="@dimen/text_size_24"
                    android:text="10000"/>
                <TextView
                    style="@style/text_view"
                    android:text="Написано строк кода"/>
            </LinearLayout>

            <View style="@style/vertical_line"/>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    style="@style/text_view"
                    android:id="@+id/projects_tv"
                    android:textSize="@dimen/text_size_24"
                    android:text="5"/>
                <TextView
                    style="@style/text_view"
                    android:text="Проектов"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_8">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_phone_black_24dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_72"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/size_32"
                android:layout_marginRight="@dimen/size_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        style="@style/EditFromView"
                        android:id="@+id/phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Мобильный"
                        android:inputType="phone"
                        android:text="+7 (978) 111-22-33"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:enabled="false"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"
                android:layout_marginRight="@dimen/size_32"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_72"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_8">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_email_black_24dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_72"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/size_32"
                android:layout_marginRight="@dimen/size_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        style="@style/EditFromView"
                        android:id="@+id/mail_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        android:text="oleg@mail.ru"
                        android:enabled="false"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_send_black_24dp"
                android:layout_marginRight="@dimen/size_32"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_72"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_8">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/vk_circle"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_72"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/size_32"
                android:layout_marginRight="@dimen/size_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        style="@style/EditFromView"
                        android:id="@+id/vk_profile_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Профиль в VK"
                        android:inputType="textEmailAddress"
                        android:text="vk.com/olejanja"
                        android:enabled="false"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"
                android:layout_marginRight="@dimen/size_32"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_72"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_8">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_72"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/size_32"
                android:layout_marginRight="@dimen/size_16">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        style="@style/EditFromView"
                        android:id="@+id/git_repo_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Репозиторий"
                        android:inputType="textMultiLine"
                        android:text="github.com/Olejan/DevIntensive"
                        android:enabled="false"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"
                android:layout_marginRight="@dimen/size_32"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_72"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_8">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/size_32"
                android:layout_marginRight="@dimen/size_32">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        style="@style/EditFromView"
                        android:id="@+id/about_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="О себе"
                        android:inputType="textMultiLine"
                        android:text="Обитает в средней Европе, в северной и средней Азии. В России — от западных границ до Забайкалья на востоке. Зимует в Африке (при этом пролетая весь континент с севера до юга) и южной Индии."
                        android:enabled="false"
                        android:focusable="false"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_72"></View>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
